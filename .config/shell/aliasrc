# Basics
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias vim="nvim"

# SSH
alias pihole="ssh pi@192.168.24.1"                # pi-hole dns adblocker   192.168.24.1
alias sd="ssh pi@192.168.24.2"                    # sd pi vpn               192.168.24.2
alias phrog="ssh phrog@192.168.24.3"              # homelab server          192.168.24.3
alias backups="ssh pi@192.168.24.4"               # backup server           192.168.24.4

# Misc
alias val="valgrind --leak-check=full --show-leak-kinds=all --track-fds=yes --track-origins=yes"
alias rm="trash --trash-dir $XDG_DATA_HOME/trash"
alias occ="docker exec -it -u www-data nextcloud php occ"
alias scan="sudo chown -R http:http /home/phrog/files; occ files:scan --all"

alias m4b-tool='docker run -it --rm -u $(id -u):$(id -g) -v "$(pwd)":/mnt sandreas/m4b-tool:latest'

alias restart="/home/phrog/scripts/restart.sh"
alias update="/home/phrog/scripts/update.sh"
