alias TERMINAL="foot"                                                               # terminal emulator
alias BROWSER="zen-browser"                                                         # web browser
alias SHELL="zsh"                                                                   # terminal shell
alias LAUNCHER="fuzzel"                                                             # application launcher
alias AUDIO_MANAGER="pavucontrol"                                                   # audio management
alias CALENDAR="${TERMINAL} --title \"Calendar\" khal interactive"                  # calendar
alias PDF_VIEWER="zathura"                                                          # pdf viewer
alias IMAGE_VIEWER="swayimg"                                                        # image viewer
alias FILE_BROWSER="${TERMINAL} --title \"File Browser\" lf-wrapper"                # file browser
alias TASK_MANAGER="${TERMINAL} glances"                                            # task manager
alias BLUETOOTH_MENU="dmenu-bluetooth"                                              # bluetooth device selection menu
alias WIFI_MENU="wifi-menu"                                                         # wifi selection menu
alias VPN_MENU="vpn-menu"                                                           # VPN selection menu
alias MAIL_CLIENT="${TERMINAL} neomutt -F ${NEOMUTT_CONFIG}"                        # email client
