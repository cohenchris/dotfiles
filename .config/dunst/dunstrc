[global]

########## PLACEMENT ##########
# Which monitor should the notifications be displayed on.
monitor = 0

# The width of the notification window in pixels
width = (100, 1000)

# The origin of the notification window on the screen
# Move the toast from the origin using offset (horizontal, vertical)
origin = top-right
offset = (50, 50)

# Size of gap to display between notifications
gap_size = 5




########## APPEARANCE ##########
# The distance in pixels from the content to the separator/border of the window on the vertical axis
padding = 10

# The distance in pixels from the content to the border of the window on the horizontal axis
horizontal_padding = 10

# The width in pixels of frame around the notification window
frame_width = 1

# Font
font = TerminessNerdFont 15

# The amount of extra spacing between text lines in pixels
line_height = 0

# Default corner radius in pixels
corner_radius = 10

# Defines how text should be aligned within the notification
alignment = left
vertical_alignment = center

# The format of the message.  Possible variables are:
#   %a  appname
#   %s  summary
#   %b  body
#   %i  iconname (including its path)
#   %I  iconname (without its path)
#   %p  progress value if set ([  0%] to [100%]) or nothing
#   %n  progress value if set without any extra characters
#   %%  Literal %
# Markup is allowed
markup = full
format = "<b>%s</b>\n%b"



########## BEHAVIOR ##########
# Notifications that have been recalled from history will not timeout
sticky_history = true

# Max number of notifications that will be kept in history
history_length = 20

# Duplicate notification handling
stack_duplicates = true
hide_duplicate_count = false

# Don't timeout notifications if user is idle longer than this time
idle_threshold = 120

# Display notifications with higher urgency over the others
sort = true



########## STYLE ##########
# IMPORTANT: colors have to be defined in quotation marks.
# Otherwise the "#" and following would be interpreted as a comment.

[urgency_low]
  background = "#006600a0"
  foreground = "#ffffff"
  frame_color = "#00c000"
  timeout = 10

[urgency_normal]
  background = "#000000a0"
  foreground = "#ffffff"
  frame_color = "#787878"
  timeout = 15

[urgency_critical]
  background = "#900000a0"
  foreground = "#ffffff"
  frame_color = "#ff0000"
  timeout = 20
