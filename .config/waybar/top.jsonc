// -*- mode: jsonc -*-
{
  /***********
   * GENERAL *
   ***********/

  "layer": "top",                         // waybar at top layer
  "position": "top",                      // waybar position (top|bottom|left|right)
  "height": 35,                           // waybar height (to be removed for auto height)
  "spacing": 4,                           // gaps between modules in px

  // left modules
  "modules-left": [
    "hyprland/workspaces",
  ],

  // center modules
  "modules-center": [
    "hyprland/window",
  ],

  // right modules
  "modules-right": [
    "wireplumber",
    "bluetooth",
    "custom/email",
    "custom/calendar",
    "clock",
    "custom/power",
  ],

  /***********
   * MODULES *
   ***********/

  // workspaces
  "hyprland/workspaces": {
    "format": "{name}",                   // how information should be displayed.
  },

  // focused window name
  "hyprland/window": {
    "format": "{title}",                  // how information should be displayed
    "icon": true,                         // whether or not the icon should be present
    "icon-size": 20,                      // size of the icon
    "max-length": 75,                     // max length of the window title
  },

  // audio
  "wireplumber": {
    "format": "{icon} {volume:5}%",
    "format-icons": ["", "", ""],
    "format-muted": "  MUTED",
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
    "max-volume": 100,
  },

  // bluetooth
  "bluetooth": {
    "format": " {status}",
    "format-disabled": "", // an empty format will hide the module
    "format-connected": " {num_connections} connected",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "on-click": "${BLUETOOTH_SELECTOR}",
  },

  // email
  "custom/email": {
    "format": "{}",
    "tooltip": false,
    "interval": 10,
    "format-icons": {
        "default": "󰇮",
        "new_mail": "󰛏",
    },
    "exec": "${XDG_CONFIG_HOME}/waybar/scripts/email.sh",
    "on-click": "${MAIL_CLIENT}"
  },

  // calendar
  "custom/calendar": {
    "format": "{}",
    "tooltip": true,
    "interval": 300,
    "exec": "${XDG_CONFIG_HOME}/waybar/scripts/calendar.py",
    "return-type": "json"
  },

  // clock
  "clock": {
    "interval": 1,
    "format": "󰥔  {:%I:%M:%S %p}",
    "timezone": "America/Los_Angeles",
    "tooltip": false,
  },

  // power menu
  "custom/power": {
    "format" : "󰤆",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "${XDG_CONFIG_HOME}/waybar/power_menu.xml", // Menu file in resources folder
    "menu-actions": {
      "lock": "loginctl lock-session",
      "logout": "hyprctl dispatch exit",
      "shutdown": "poweroff",
      "reboot": "reboot",
    }
  },
}
