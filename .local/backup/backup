#!/bin/bash

echo "********** WARNING ************"
read -p "CREATE A NEW BACKUP? (y/N) " yn

case $yn in
  [Yy]* ) ;;
  *     ) exit;;
esac

cd

declare -a dotfiles=(
  ~/.config/dunst/
  ~/.config/i3/
  ~/.config/git/
  ~/.config/polybar/
  ~/.config/yadm/
  ~/.config/neomutt/
  ~/.config/isync/
  ~/.config/notmuch/
  ~/.config/khard/
  ~/.config/shell/
  ~/.config/vdirsyncer/config
  ~/.local/backup
  ~/.local/bin
  ~/.local/share/gnupg/gpg.conf
  ~/.vimrc
  ~/.xinitrc
  ~/.zprofile
)

for i in ${dotfiles[@]}
do
  echo "----- UPLOADING $i -----"
  yadm add $i
done

curr_date=$(date +"%m-%d-%Y_%T")
yadm commit -m "backup $curr_date"
yadm push origin main
