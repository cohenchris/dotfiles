#!/bin/bash

extractme="$1"

if [ -f "$extractme" ] ; then
  case "$extractme" in
    *.tar.bz2)
      tar xvjf "$extractme"
      ;
    *.tar.gz)
      tar xvzf "$extractme"
      ;;
    *.tar.xz)
      tar xf "$extractme"
      ;;
    *.bz2)
      bunzip2 "$extractme"
      ;;
    *.rar)
      unrar x "$extractme"
      ;;
    *.gz)
      gunzip "$extractme"
      ;;
    *.tar)
      tar xvf "$extractme"
      ;;
    *.tbz2)
      tar xvjf "$extractme"
      ;;
    *.tgz)
      tar xvzf "$extractme"
      ;;
    *.zip)
      unzip "$extractme"
      ;;
    *.Z)
      uncompress "$extractme"
      ;;
    *.7z)
      7z x "$extractme"
      ;;
    *)
      echo "don't know how to extract '$extractme'..." 
      ;;
  esac
else
  echo "'$extractme' is not a valid file!"
fi
