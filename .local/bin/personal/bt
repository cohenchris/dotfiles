#!/bin/bash

BLUE="\e[34m"
GREEN="\e[32m"
RED="\e[31m"
NC="\e[0m"

declare -a devices=(
  44:F0:9E:95:91:C9   # Airpods Pro
  8C:85:80:42:F8:A9   # SoundCore 2
)

echo -e "${BLUE}Which device would you like to connect?"
echo -e "  1) Airpods Pro"
echo -e "  2) Soundcore 2"
echo -ne "Choice: ${NC}"
read choice

case $choice in
  [1] ) echo -e "${GREEN}Connecting to Airpods Pro...${NC}";;
  [2] ) echo -e "${GREEN}Connecting to Soundcore 2...${NC}";;
  *   ) echo -e "${RED}Invalid choice. Exiting...${NC}"; exit;;
esac

DEVICE=(${devices[$choice - 1]})

bluetoothctl -- power on > /dev/null
bluetoothctl -- connect $DEVICE > /dev/null

if [[ $? -eq 0 ]]; then
  echo -e "${GREEN}Connection to device succeeded.${NC}"
else
  echo -e "${RED}Connection to device failed.${NC}"
fi
